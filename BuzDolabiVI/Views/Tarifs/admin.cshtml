        <h2 style="text-align:center;">--- ONAYSIZ --- SON EKLENEN TARİFLER</h2>
        <ul class="cards">
            @foreach (var item in Model)
            {
                if (item.tarifOnay == "onay")
                {
                    continue;
                }
                <li class="card">
                    <div>
                        <h3 class="card-title">@Html.DisplayFor(modelItem => item.tarifAd)</h3>
                        <img src="~/images/@item.tarifFoto" width="10%" height="10%">
                        <div class="card-content">
                            Yazan Kişi = @item.adSoyad
                            <p>
                                @Html.DisplayFor(modelItem => item.tarifGirisYazisi)
                            </p>
                        </div>
                    </div>
                    <div class="card-link-wrapper">
                        <a class="card-link" asp-action="adminDetails" asp-route-id="@item.tarifID">İNCELE</a> @item.goruntulenme görüntülenme
