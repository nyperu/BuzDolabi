<script>
    // Get the button
    let mybutton = document.getElementById("onaysizTarifler");
 let yourbutton = document.getElementById("onayliTarifler");
    let onayliTarifler = document.getElementById("onayli");
    let onaysizTarifler = document.getElementById("onaysiz");

    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function () { scrollFunction() };

  
    
    document.getElementById("onaysizTarifler").addEventListener("click", myFunction);

    function myFunction() {
        mybutton.style.display = "none";
        yourbutton.style.display="block";
        onayliTarifler.style.display="none";
        onaysizTarifler.style.display="block";
    };
    document.getElementById("onayliTarifler").addEventListener("click", myFunctionn);

    function myFunctionn() {

        mybutton.style.display = "block";
        yourbutton.style.display = "none";

        onaysizTarifler.style.display = "none";
        onayliTarifler.style.display = "block";

    };
</script>